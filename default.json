{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "My default Renovate config",
  "extends": [
    ":assignee(Xenfo)",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":semanticCommits",
    ":semanticPrefixFixDepsChoreOthers",
    ":updateNotScheduled",
    ":ignoreModulesAndTests",
    ":preserveSemverRanges",
    ":prHourlyLimit4",
    ":prConcurrentLimit20",
    ":label(dependencies)",
    ":enableVulnerabilityAlertsWithLabel(security)",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ]
}
